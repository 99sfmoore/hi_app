<% provide(:title, "Financial Aid Package for #{@student.full_name}") %>
<h1 class="med-green">Congratulations, <%=@student.first_name %>!</h1>
<h3 class="dark-green">Where did you get in?</h3>
<div class="row">
  <div class="col-sm-5 col-sm-offset-1">
    <%= form_for [@student, @package] do |f| %>
      <%= hidden_field_tag :single, true %>
      <%= render 'fields', f: f %>
      <%=check_box_tag "You got in!  Tell your friends the good news on twitter!","You got in!  Tell your friends the good news on twitter!",:true %>
      <%=label_tag "You got in!  Tell your friends the good news on Twitter! ","You got in!  Tell your friends the good news on Twitter!   "%><%=image_tag 'twitter.png'%>
      <%= f.submit "Save Package", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>